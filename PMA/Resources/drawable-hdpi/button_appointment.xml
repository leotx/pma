<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">
    <shape>
      <gradient
        android:startColor="#383838"
        android:endColor="#383838"
        android:angle="270" />
      <stroke
        android:width="3dp"
        android:color="#d3d3d3" />
      <corners
        android:radius="100dp" />
      <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
      <size
        android:width="150dp"
        android:height="150dp" />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape>
      <gradient
        android:endColor="#4A6075"
        android:startColor="#4A6075"
        android:angle="270" />
      <stroke
        android:width="3dp"
        android:color="#d3d3d3" />
      <corners
        android:radius="100dp" />
      <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
      <size
        android:width="150dp"
        android:height="150dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
        android:centerX="35%"
        android:centerColor="#4A6075"
        android:startColor="#383838"
        android:endColor="#C5CFDE"
        android:angle="270" />
      <stroke
        android:width="3dp"
        android:color="#d3d3d3" />
      <corners
        android:radius="100dp" />
      <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
      <size
        android:width="150dp"
        android:height="150dp" />
    </shape>
  </item>
</selector>